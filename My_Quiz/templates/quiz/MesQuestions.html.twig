{% extends 'base.html.twig' %}

{% block body %}
{% if question %}
	<table id="question" class="table table-striped">
		<thead>
			<tr>
				<th>
					Question
				</th>
			</tr>
		</thead>
		<tbody>
			{% for question in question %}
				<tr>
					<td>
                        {{ question.id }}. {{ question.question }}
					</td>
					<td>
						<a href="/question/{{ question.id }}" class="btn btn-dark">
							Détails
						</a>
						<a href="/question/edit/{{ question.id }}" class="btn btn-dark">
							Modifier
						</a>
						<a href="/question/delete/{{ question.id }}" class="btn	btn-danger" onclick="return confirm('Etes-vous sûr de supprimer	cet	article?');">
							Supprimer
						</a>
                    </td>
				</tr>

		</tbody>
	</tr>
</td></tbody></tr>{% endfor %}</tbody></table>{% else %}<p>Aucune question</p>{% endif %}{% endblock %}
