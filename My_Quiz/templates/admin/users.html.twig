{% extends 'base.html.twig' %}
{% block title%}
	Liste des Utilisateurs
{% endblock %}
{% block body %}
	<h1>Liste des Utilisateurs</h1>

	<table id="users" class="table table-striped">
							<a href="{{ path('admin_CreateNew') }}">
							<button type="button" class="btn btn-success">
								Cree un Utilisateur
							</button>
						</a>
		<thead>
			<tr>
				<th>Id</th>
				<th>email</th>
				<th>roles</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>
						{% for role in user.roles %}
							{% if role=="ROLE_USER" %}
								Utilisateur
							{% elseif role=="ROLE_EDITOR" %}
								Editeur
							{% elseif role=="ROLE_ADMIN" %}
								Administrateur
							{% endif %}
						{% endfor %}
					</td>
					<td>
						<a href="{{ path('admin_modifier_utilisateur', {'id': user.id }) }}">
							<button type="button" class="btn btn-warning">
								Modifier
							</button>
						</a>
						<a href="{{ path('admin_delete_utilisateur', {'id': user.id }) }}" onclick="return confirm('Etes-vous sÃ»r de supprimer	cet	article?');">
							<button type="button" class="btn btn-danger">
								Supprimer
							</button>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
